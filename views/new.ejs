              <option value="DZ">Others</option>
              <option value="AS">Bicycles</option>
              </select>
        </div>
            <div class="field">
                <label>Description</label>
                <textarea name="shop[body]"></textarea>
            </div>
        
        <button class="ui button" type="submit">Submit</button>
        </div>
    </form>
</div>