<%include ./partials/header %>
<div class="ui main text container">
    <div class=" ui huge header">Books</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%for(var i=0;i<books.length;i++){%>
            <div class="item">
                <div class="image">
                    <img src="<%=books[i].image%>">
                </div>
                <div class="content">
                    <a class="header" href="/shops/<%=books[i]._id %>"><%=books[i].title%></a>
                    <div class="description">
                        <p><%=books[i].body%></p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/<%=books[i]._id %>">Read More
                            <i class="right chevron icon"></i></a>
                    </div>
                </div>
            </div>
            <%}%> 
        </div>
    </div>
</div>

<% include ./partials/footer%>