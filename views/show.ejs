<%include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header"><%=shop.title%></div>
    <div class="ui attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=shop.image%>">
            <%console.log(shop.image)%>
            <div class="description">
                <p><%=shop.body%></p>
                <h3>Posted by:<%=shop.username%></h3>
                <%console.log(shop.id)%>
                <%console.log(currentUser.id)%>
            </div>
            <%if(shop.id===(currentUser.id)|| currentUser.reg_num==='18BCE0154'||currentUser.reg_num==='18BCE0139' || currentUser.reg_num==='18BCE0167'){%>
                <a class="ui blue basic button"href="/<%=shop._id%>/edit">Edit details</a>
                <a class="ui blue basic button"href="/<%=shop._id%>/change">Change Photo</a>
                <form action="/<%=shop._id%>?_method=Delete" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>      
            <%}else{%>
                <a class="ui blue basic button" href="/<%=shop._id%>/contact">Seller Details</a>
                <%}%>
        </div>
</div>

</div>
